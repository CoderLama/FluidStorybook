{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "inlineSources": true,
    "noImplicitAny": false,
    "incremental": true,
    "downlevelIteration": true,
    "types": [],
    "strict": true,
    "jsx": "react",
    "strictNullChecks": false,
    "lib": [ "ES2017", "ES2018.Promise", "DOM", "DOM.Iterable" ]
  },
  // "include": ["src/**/*.ts", "src/**/*.tsx", ".storybook/**/*.jsx", "typings/**/*", 
  //     ".storybook/sourcecode-addon/storybookPanel.controls.tsx", ".storybook/sourcecode-addon/storybookPanel.jsx", 
  //     ".storybook/sourcecode-addon/storybookHighlighter.jsx"],
  "exclude": [
    "**/dist",
    "node_modules",
    "**/node_modules",
    "**/*.spec.ts",
    "**/__tests__",
    "**/*.test.ts",
    ".storybook"
  ]
}
